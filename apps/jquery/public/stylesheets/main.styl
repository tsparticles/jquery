html
  height 100%
  overflow hidden

body
  line-height 1
  height 100%
  overflow auto
  padding 0
  margin 0

#container
  display flex
  width 100%
  height 100%
  min-height 1vh

#editor
  background-color white
  z-index 1

#editor-container
  z-index 1
  position fixed
  top 0
  left 0
  height 100%
  max-width 400px

#tsparticles-container
  position relative
  flex 3
  width 100%
  height 100%

#tsparticles
  width 100%
  height 100%
  background-size cover
  background-position 50% 50%

#editor-container
  flex 1
  width 100%

#editor
  height 100%

#header
  display flex

#filler
  flex 100%

#docs
  flex auto
  white-space nowrap

#inputs
  display flex

  select
    flex 2

  button
    flex 1
    white-space nowrap

/* ---- stats.js ---- */
.count-particles
  background #000022
  position absolute
  top 48px
  left 0
  width 80px
  color #13e8e9
  font-size 0.8em
  text-align left
  text-indent 4px
  line-height 14px
  padding-bottom 2px
  font-family Helvetica, Arial, sans-serif
  font-weight bold

.js-count-particles
  font-size 1.1em

#stats,
.count-particles
  -webkit-user-select none

#stats
  border-radius 3px 3px 0 0
  overflow hidden
  display none

  *
    display none

.count-particles
  border-radius 0 0 3px 3px
